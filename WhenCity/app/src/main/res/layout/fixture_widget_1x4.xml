<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainWrap"
    android:layout_width="471dp"
    android:layout_height="141dp"
    android:layout_margin="10dp"
    android:background="@drawable/widget_style"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/dateWrap"
        android:layout_width="150dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="2021 05-30\n04:00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/border"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/fixtureWrap"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chl"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:text="VS"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/ivAway"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_mci"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>